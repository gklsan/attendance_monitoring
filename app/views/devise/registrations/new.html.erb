<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :class => "labelbox"  %>
    <%= f.email_field :email, autofocus: true, :class => "textbox"  %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "labelbox" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "off", :class => "textbox"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => "labelbox" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "textbox"  %>
  </div>

    <%= f.submit "Sign up", :class => 'all-button' %>




    <%= render "devise/shared/links" %>
     <% end %>
